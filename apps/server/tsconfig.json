{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // ✅ 必须和 moduleResolution 匹配
    "moduleResolution": "NodeNext", // ✅ Node 风格 ESM 解析
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
